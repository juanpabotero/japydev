---
export interface Props {
  company: string;
  date: string;
  description: string[];
  title: string;
}

const { company, date, description, title } = Astro.props;
---

<div class="flex flex-col md:flex-row border-s-2 border-red-800/60 dark:border-amber-300/60 ps-3">
  <div class="md:w-1/3 mb-2 md:mb-0">
    <h4 class="text-lg text-red-800 dark:text-amber-300">{title}</h4>
    <p>{company}</p>
    <p class="text-sm text-gray-600 dark:text-gray-400/80">{date}</p>
  </div>
  <div class="md:w-2/3">
    {description.map((item) => <p>{item}</p>)}
  </div>
</div>
