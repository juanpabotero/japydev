---
export interface Props {
  id: number;
  img: string;
  stack: string;
  title: string;
  url: string;
}

const { img, stack, title, url } = Astro.props;
---

<a
  href={url}
  aria-label={`Proyecto - ${title}`}
  class="group flex items-center gap-5 sm:gap-7 p-4 border-[1px] border-red-500/40 dark:border-amber-300/40 rounded-md 
  hover:border-red-500/60 dark:hover:border-amber-300/60 hover:-translate-y-1 transition-all duration-200"
>
  <img
    src={img}
    alt={title}
    width="80"
    height="52"
    class="w-20 sm:w-24 max-h-20 object-cover aspect-auto rounded-md"
  />
  <div class="grid gap-1">
    <h4 class="text-lg font-bold">{title}</h4>
    <p class="text-sm sm:text-base text-gray-600 dark:text-gray-400/80">{stack}</p>
  </div>
  <svg
    width="18"
    height="18"
    viewBox="0 0 18 18"
    fill="none"
    class="transition-all duration-300 group-hover:translate-x-1 ml-auto hidden sm:block"
  >
    <path
      d="M5.25 12.75L12.75 5.25"
      stroke="#999999"
      stroke-linecap="round"
      stroke-linejoin="round"></path>
    <path
      d="M5.25 5.25H12.75V12.75"
      stroke="#999999"
      stroke-linecap="round"
      stroke-linejoin="round"></path>
  </svg>
</a>
